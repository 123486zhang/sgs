<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    android:padding="16dp"
    android:background="@animator/jbs4">

    <com.xuexiang.xupdatedemo.ImageViewCriCle
        android:id="@+id/top"
        android:layout_width="92dp"
        android:layout_marginTop="40dp"
        android:layout_height="92dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/male2"
        android:scaleType="center"
        />
    <EditText
        android:layout_marginTop="140dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/text1"
        android:hint="用户名"
        android:maxLength="9"
        android:maxLines="1"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/text2"
        android:layout_below="@+id/text1"
        android:hint="密码"
        android:maxLength="18"
        android:maxLines="1"
        android:digits="+-/*?!@#+.,;1234567890zxcvbnmasdfghjklqwertyuiopQWERTYUIOPASDFGHJKLZXCVBMN"
        android:password="true"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/text3"
        android:layout_below="@+id/text2"
        android:hint="确认密码"
        android:digits="+-/*?!@#+.,;1234567890zxcvbnmasdfghjklqwertyuiopQWERTYUIOPASDFGHJKLZXCVBMN"
        android:maxLength="18"
        android:maxLines="1"
        android:password="true"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/text4"
        android:layout_below="@+id/text3"
        android:hint="手机号（用于找回密码）"
        android:maxLength="11"
        android:inputType="phone"
        android:maxLines="1"
        />
    <Button
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/text4"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:background="@animator/jbs"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:text="注 册"/>
    <Button
        android:id="@+id/btn2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:background="@mipmap/back"
        android:textSize="40sp"
        android:layout_marginTop="40dp"
        android:gravity="center_vertical"
        android:textColor="#5DAFF1"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/flags"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
