        android:text="转生"
        android:layout_above="@+id/table3"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="20dp"
        />
    <Button
        android:id="@+id/btn2"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:background="@animator/jbs4"
        android:layout_toLeftOf="@+id/table11"
        android:text="转生"
        android:layout_above="@+id/table3"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="20dp"
        />
    <Button
        android:id="@+id/btn3"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:background="@animator/jbs4"
        android:layout_toLeftOf="@+id/table10"
        android:text="转生"
        android:layout_above="@+id/table4"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="20dp"
        />
    <Button
        android:id="@+id/btn4"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:background="@animator/jbs4"
        android:layout_toLeftOf="@+id/table11"
        android:text="转生"
        android:layout_above="@+id/table4"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="20dp"
        />
    <TextView
        android:id="@+id/zszt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#E41111"
        android:textSize="16dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/yb"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:text="将灵背包"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#039BE5"
        android:textSize="23dp"
        android:layout_toLeftOf="@+id/table10"
        android:layout_marginTop="16dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/back"
        />
