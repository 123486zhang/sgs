        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/ybtop2"
        android:id="@+id/yyzsd2"
        android:text="所需转生丹:"
        android:layout_marginTop="183dp"
        android:textColor="#EC2929"
        />
    <ImageView
        android:id="@+id/jl1"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_toLeftOf="@+id/table10"
        android:layout_above="@+id/table3"
        android:layout_marginBottom="22dp"
        android:layout_marginRight="12dp"
        />
    <ImageView
        android:id="@+id/jl2"
        android:layout_width="80dp"
        android:layout_height="100dp"

        android:layout_toLeftOf="@+id/table11"
        android:layout_above="@+id/table3"
        android:layout_marginBottom="22dp"
        android:layout_marginRight="12dp"
        />
    <ImageView
        android:id="@+id/jl3"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_toLeftOf="@+id/table10"
        android:layout_above="@+id/table4"
        android:layout_marginBottom="22dp"
        android:layout_marginRight="12dp"
        />
    <ImageView
        android:id="@+id/jl4"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_toLeftOf="@+id/table11"
        android:layout_above="@+id/table4"
        android:layout_marginBottom="22dp"
        android:layout_marginRight="12dp"
        />
    <TextView
        android:id="@+id/jltext1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/table10"
        android:layout_above="@+id/table3"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:layout_marginBottom="102dp"
        android:layout_marginRight="28dp"
        />
    <TextView
        android:id="@+id/jltext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/table11"
        android:layout_above="@+id/table3"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:layout_marginBottom="102dp"
        android:layout_marginRight="28dp"
        />
    <TextView
        android:id="@+id/jltext3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/table10"
        android:layout_above="@+id/table4"
