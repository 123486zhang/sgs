        android:layout_toRightOf="@+id/table10"
        android:id="@+id/table11"
        android:layout_width="2dp"
        android:layout_marginLeft="100dp"
        android:layout_height="242dp"
        android:layout_below="@+id/table1"
        android:background="#00FB8C00"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/flags"
        android:layout_alignParentBottom="true"
        />
    <TextView
        android:id="@+id/yb"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="218dp"
        android:textColor="#FFB300"
        android:fontFamily="@font/fzbw"
        />
    <ImageView
        android:id="@+id/ybtop"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_toLeftOf="@+id/yb"
        android:layout_marginTop="214dp"
        android:background="@mipmap/zsd"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/ybtop"
        android:id="@+id/yyzsd"
