<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    android:padding="16dp"
    android:background="@animator/jbs4">
    <EditText
        android:layout_marginTop="140dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/text1"
        android:hint="用户名"
        android:maxLength="9"
        android:maxLines="1"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/text2"
        android:layout_below="@+id/text1"
        android:hint="密码"
        android:digits="+-/*?!@#+.,;1234567890zxcvbnmasdfghjklqwertyuiopQWERTYUIOPASDFGHJKLZXCVBMN"
        android:maxLength="18"
        android:maxLines="1"
        android:password="true"
        />
    <EditText
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:id="@+id/text3"
        android:layout_below="@+id/text2"
        android:hint="验证码"
        android:digits="1234567890zxcvbnmasdfghjklqwertyuiopQWERTYUIOPASDFGHJKLZXCVBMN"
        android:maxLength="4"
        android:maxLines="1"
        />
    <ImageView
        android:id="@+id/image"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_below="@+id/text2"
        android:layout_alignParentRight="true"
        />
    <Button
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/text4"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:background="@animator/jbs"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:text="登 录"/>
    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn1"
        android:layout_marginTop="15dp"
        android:layout_alignParentLeft="true"
        android:background="@android:color/transparent"
        android:textSize="14sp"
        android:textColor="#046ABB"
        android:text="忘记密码"/>
    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn1"
        android:layout_marginTop="15dp"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:textSize="14sp"
        android:textColor="#046ABB"
        android:text="用户注册"/>
    <TextView
        android:id="@+id/text4"
        android:text="看不清?点击图片刷新"
        android:textColor="#046abb"
        android:layout_width="wrap_content"
        android:layout_marginRight="14dp"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"/>
    <com.xuexiang.xupdatedemo.ImageViewCriCle
        android:id="@+id/top"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/male"
        android:layout_marginTop="40dp"
        android:scaleType="center"
        />
    <com.xuexiang.xupdatedemo.MarqueeText
        android:id="@+id/text35"
        android:layout_below="@+id/btn2"
        android:layout_marginTop="45dp"
        android:textSize="30sp"
        android:text="新用户现在注册即送："
        android:textColor="#F50702"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:id="@+id/yb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/sgsyb"
        android:layout_below="@+id/text35"
        android:layout_marginTop="1dp"/>
    <TextView
        android:id="@+id/text36"
        android:layout_below="@+id/text35"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/yb"
        android:textSize="30sp"
        android:text="*30000"
        android:textColor="#EB9C39"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:id="@+id/zml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/sgszml"
        android:layout_below="@+id/text35"
        android:layout_toRightOf="@+id/text36"
        android:layout_marginTop="1dp"/>
    <TextView
        android:id="@+id/text37"
        android:layout_below="@+id/text35"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/zml"
        android:textSize="30sp"
        android:text="*20 "
        android:textColor="#F86436"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/flags"
        android:layout_alignParentBottom="true"
        />
    <ImageView
        android:id="@+id/gssp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/gssp"
        android:layout_below="@+id/text35"
        android:layout_toRightOf="@+id/text37"
        android:layout_marginTop="1dp"/>
    <TextView
        android:id="@+id/text38"
        android:layout_below="@+id/text35"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/gssp"
        android:textSize="30sp"
        android:text="*500"
        android:textColor="#726115"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</RelativeLayout>
