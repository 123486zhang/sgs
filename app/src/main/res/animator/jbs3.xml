<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape>
            <corners android:radius="5dip" />
            <gradient android:angle="0" android:centerColor="#C7F593" android:endColor="#84FA88" android:startColor="#A2F0E9" />
        </shape>
    </item>

    <item android:state_selected="false">
        <shape>
            <corners android:radius="8dip" />
            <gradient android:angle="0" android:centerColor="#F5A84A" android:endColor="#F7764E" android:startColor="#F3DB42" />
        </shape>
    </item>
</selector>